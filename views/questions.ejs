<% layout ('layout') %>

<div class="container main_container">

<!-- NAVIGATION BAR -->
	<div class="navbar navbar-default" rol="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a id="brand" href="/" class="navbar-brand"> No Doctors Allowed </a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<% if (authenticated) { %>
						<li><a href="/logout">LogOut</a></li>
					<% } else { %> 
						<li><a href="/login">LogIn</a></li>
					<% } %> 
						<li class="last"><a href="/main">Home</a></li>
				</ul>
			</div>
		</div>
	</div>
<!-- /NAVIGATION BAR -->


	<div class="block">
		<ul class="bigger_text">

			<%  questions.forEach(function(element) { %>
					<li><a href="/<%= element.id %>/question"> <%= element.title %></a></li>
			<%	}); %>

		</ul>

		<% if (authenticated) { %>
		<div class="text-center margin_top20 margin_bottom20">
			<a class="btn btn-primary btn-primary" href="/<%= user_id %>/create_new_question">Create New Question</a>
		</div>
		<% } %>


	</div>

</div>