  <div class="modal-dialog margin-top-100">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Answer This Question</h4>
        <h5 class="mini_title"><%= question.title %></h5>
        <h6 class="mini_body"><%= question.body %></h6>
      </div>


      <form method="post" action="/<%= user_id %>/anwer_this_question">
        <div class="modal-body">
          

          <h4 class="margin-top-20">Answer Body</h4>
          <div class="margin-top-20">

            <input 
              name="an_body"
              class="form-control"
              placeholder="answer body"
              type="text" />

          </div>
        </div>
        <div class="modal-footer">
          <button id="save-manager" type="submit" class="btn btn-primary btn-success">Answer the Question</button>

        </div>
      </form>


    </div>
  </div>

